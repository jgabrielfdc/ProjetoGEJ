    href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
    integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

  <!--CSS Personalizado-->
  <link rel="stylesheet" href="/style.css">

  <title>Guia de Estudos Júnior</title>
</head>

<body>
<!--Cabeçalho-->
<header>

  <nav class="navbar navbar-expand-sm navbar-light navega">
    <div class="container">
      <!--Logo Site-->
      <a href="./" class="navbar-brand">
        <img src="/Imagens/gej (2).png" width="142">
      </a>

      <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="nav-principal">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="./">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/materiais">Materiais</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/suporte">Suporte</a>
          </li>
        </ul>
      </div>
    </div>

  </nav>
</header>

<section  id="login">
  <div>
    <form method="post" action="/auth/login" target="_self">
      <h2>Login</h2>
      <hr>
      <div class="grupo_form form-group">

        <input 
          type="email" 
          name="email" 
          id="email" 
          placeholder="E-mail:" 
          class="form-control form-control-sm m-1"
          required
        >

        <input 
          type="password" 
          name="senha" 
          id="senha" 
          placeholder="Senha:" 
          class="form-control form-control-sm m-1"
          required
        >

      </div>
      <hr>

      <button class="btn btn-primary btn-lg btn-auth w-75">Logar</button>

      {{#if message }}
        <p class="alert alert-danger m-2">{{message}}</p>
      {{/if}}
      <hr>

    </form>

    <button class="btn btn-outline-danger btn-auth" onclick="window.location.href='/cadastro'">Criar Conta</button>
    
  </div>

</section>



